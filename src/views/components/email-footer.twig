{% extends 'templates/email-container.twig' %}

{% import 'helpers/email-macros.twig' as macros %}

{% block contentStyle %} bgcolor="{{ emailConfig.footer.background }}" {% endblock %}
{% block content %}
    {{ macros.spaceRow(25, 3) }}
    <tr>
        <td align="center" width="500">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="{{ emailConfig.footer.background }}">
                <tr>
                    <td align="center">
                        {% include 'components/email-social-networks.twig' %}
                    </td>
                </tr>
                {{ macros.spaceRow(20) }}
                {% set copyright = 'Copyright Â© ' ~ emailConfig.config.companyName ~ ' ' ~ 'now'|date('Y') %}
                {{ macros.note(copyright, emailConfig, 'text-align: center; padding: 0 25px;') }}
            </table>
        </td>
    </tr>
    {{ macros.spaceRow(25, 3) }}
{% endblock %}
